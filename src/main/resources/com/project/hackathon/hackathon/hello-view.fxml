<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.project.hackathon.hackathon.HelloController">

    <!-- Fill-all layer (great place to add your background ImageView in the controller) -->
    <StackPane fx:id="centerLayer"
               AnchorPane.topAnchor="0.0"
               AnchorPane.rightAnchor="0.0"
               AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0">

        <!-- 2x2 grid of buttons, centered and responsive -->
        <GridPane fx:id="buttonGrid" alignment="CENTER" hgap="75" vgap="75">

            <!-- Two columns splitting width 50/50 -->
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>

            <!-- Two rows splitting height 50/50 -->
            <rowConstraints>
                <RowConstraints percentHeight="25"/>
                <RowConstraints percentHeight="25"/>
                <RowConstraints percentHeight="25"/>
            </rowConstraints>

            <children>
                <Button fx:id="Pong"   text="Pong!"   GridPane.rowIndex="1" GridPane.columnIndex="0"
                        maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
                <Button fx:id="Tetris" text="Tetris!" GridPane.rowIndex="1" GridPane.columnIndex="1"
                        maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
                <Button fx:id="Pacman" text="PacMan!" GridPane.rowIndex="2" GridPane.columnIndex="0"
                        maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
                <Button fx:id="Dino"   text="Dino!"   GridPane.rowIndex="2" GridPane.columnIndex="1"
                        maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
            </children>
        </GridPane>
    </StackPane>

    <!-- Anchored label stays outside the centering layer -->
    <Label fx:id="welcomeText"
           AnchorPane.topAnchor="10.0"
           AnchorPane.leftAnchor="10.0"/>
</AnchorPane>
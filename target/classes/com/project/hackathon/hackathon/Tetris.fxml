<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.project.hackathon.hackathon.TetrisController"
            prefHeight="700.0" prefWidth="800.0">

    <!-- Top bar (Back + optional status). Score is below, centered above canvas. -->
    <HBox spacing="12"
          AnchorPane.topAnchor="10.0"
          AnchorPane.leftAnchor="10.0"
          AnchorPane.rightAnchor="10.0">
        <Button fx:id="backToMain" text="Back"/>
        <Label fx:id="statusLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: #777;"/>
    </HBox>

    <!-- Main content: 2-row grid. Row 0: headers. Row 1: canvas + notes aligned top. -->
    <GridPane hgap="20" vgap="8"
              AnchorPane.topAnchor="50.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0">

        <columnConstraints>
            <ColumnConstraints percentWidth="60"/>
            <ColumnConstraints percentWidth="30"/>
        </columnConstraints>

        <rowConstraints>
            <!-- Header row: fixed height to keep both sides aligned -->
            <RowConstraints minHeight="28" prefHeight="28" maxHeight="28"/>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>

        <Label fx:id="scoreLabel"
               text="Score: 0" GridPane.halignment="CENTER"
               GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF"/>

        <Label fx:id="gameLogLabel"
               text="Game Log" GridPane.halignment="CENTER"
               GridPane.rowIndex="0" GridPane.columnIndex="1"
               style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF"/>

        <!-- Row 1 (content) -->
        <Canvas fx:id="canvas"
                width="300.0" height="600.0" GridPane.halignment="CENTER"
                GridPane.rowIndex="1" GridPane.columnIndex="0"/>

        <TextArea fx:id="textBox"
                  prefWidth="220.0" prefHeight="600.0" wrapText="true"
                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

</AnchorPane>

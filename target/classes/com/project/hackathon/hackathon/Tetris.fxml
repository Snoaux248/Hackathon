<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.project.hackathon.hackathon.TetrisController"
            prefHeight="700.0" prefWidth="800.0">

    <!-- Top bar -->
    <HBox spacing="12"
          AnchorPane.topAnchor="10.0"
          AnchorPane.leftAnchor="10.0"
          AnchorPane.rightAnchor="10.0">
        <Button fx:id="backToMain" text="Back"/>
        <Label fx:id="scoreLabel" text="Score: 0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Label fx:id="statusLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: #777;"/>
    </HBox>

    <!-- Main content: game canvas (left) + text box (right) -->
    <HBox spacing="20"
          AnchorPane.topAnchor="50.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          alignment="CENTER">

        <!-- Fixed-size game canvas (10×20 grid @ 30px = 300×600) -->
        <Canvas fx:id="canvas" width="300.0" height="600.0"/>

        <!-- Right side panel -->
        <VBox spacing="10">
            <Label text="Notes" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextArea fx:id="textBox" prefWidth="200.0" prefHeight="600.0" wrapText="true"/>
        </VBox>

    </HBox>

</AnchorPane>

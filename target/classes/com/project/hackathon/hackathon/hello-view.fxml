<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.image.ImageView?>
<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.project.hackathon.hackathon.HelloController">

    <StackPane fx:id="centerLayer"
               AnchorPane.topAnchor="0.0"
               AnchorPane.rightAnchor="0.0"
               AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0">

        <GridPane fx:id="buttonGrid" alignment="CENTER" hgap="20" vgap="25">

            <!-- Two columns splitting width 50/50 -->
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>

            <!-- Two rows splitting height 50/50 -->
            <rowConstraints>
                <RowConstraints percentHeight="30"/>
                <RowConstraints percentHeight="35"/>
                <RowConstraints percentHeight="35"/>
            </rowConstraints>

            <children>
                <Label fx:id="welcomeText" text="Legacies" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM"
                       style="-fx-font-size: 100px; -fx-font-weight: bold; -fx-font-family: 'Orbitron';
                       -fx-font-style: italic; -fx-text-fill: linear-gradient(#95EEFE, #0068CE)"/>

                <StackPane GridPane.rowIndex="1" GridPane.columnIndex="0"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                    <ImageView fx:id="pongImage" preserveRatio="true" mouseTransparent="true" fitWidth="400"
                               fitHeight="220"/>
                    <Button fx:id="Pong" text="Pong"
                            maxWidth="Infinity" maxHeight="Infinity" wrapText="true" textAlignment="CENTER"
                            StackPane.alignment="CENTER"
                            style="-fx-background-color: transparent; -fx-border-color: transparent;
                                   -fx-font-size: 20px; -fx-text-fill: white;"/>
                </StackPane>

                <StackPane GridPane.rowIndex="1" GridPane.columnIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                    <ImageView fx:id="tetrisImage" preserveRatio="true" mouseTransparent="true" fitWidth="400"
                               fitHeight="220"/>
                    <Button fx:id="Tetris" text="Tetris"
                            maxWidth="Infinity" maxHeight="Infinity" wrapText="true" textAlignment="CENTER"
                            StackPane.alignment="CENTER"
                            style="-fx-background-color: transparent; -fx-border-color: transparent;
                                   -fx-font-size: 20px; -fx-text-fill: white;"/>
                </StackPane>

                <StackPane GridPane.rowIndex="2" GridPane.columnIndex="0"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                    <ImageView fx:id="pacmanImage" preserveRatio="true" mouseTransparent="true" fitWidth="400"
                               fitHeight="220"/>
                    <Button fx:id="Pacman" text="Pacman"
                            maxWidth="Infinity" maxHeight="Infinity" wrapText="true" textAlignment="CENTER"
                            StackPane.alignment="CENTER"
                            style="-fx-background-color: transparent; -fx-border-color: transparent;
                                   -fx-font-size: 20px; -fx-text-fill: white;"/>
                </StackPane>

                <StackPane GridPane.rowIndex="2" GridPane.columnIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                    <ImageView fx:id="dinoImage" preserveRatio="true" mouseTransparent="true" fitWidth="400"
                               fitHeight="220"/>
                    <Button fx:id="Dino" text="Dino"
                            maxWidth="Infinity" maxHeight="Infinity" wrapText="true" textAlignment="CENTER"
                            StackPane.alignment="CENTER"
                            style="-fx-background-color: transparent; -fx-border-color: transparent;
                                   -fx-font-size: 20px; -fx-text-fill: white;"/>
                </StackPane>
            </children>
        </GridPane>
    </StackPane>
</AnchorPane>